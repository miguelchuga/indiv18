<odoo>
  <data>

    <!-- libro.mayor form view -->
    <record id="libro_mayor_view_form" model="ir.ui.view">
      <field name="name">libro_mayor_view_form</field>
      <field name="model">libro.mayor</field>
      <field name="arch" type="xml">
        <form string="Libro Mayor">
          <header>
            <button name="generar_libro" type="object" string="Generar" class="oe_highlight" />
            <button name="imprimir" type="object" string="Generar excel" class="oe_highlight" />
            <button name="foliar" type="object" string="Foliar Libro" class="oe_highlight" />
          </header>
          <sheet>
              <label for="name" class="oe_edit_only"/>
              <h1>
                  <field name="name"/>
              </h1>
              <group>              
                <field name="fecha_inicio"/>
                <field name="fecha_final"/>
                <field name="company_id" required="1"/>
                <field name="account_id" />

                
                <field name="folio" required="1"/>

                <field name="nombre_archivo" invisible="1"/>
                <field name="file_xlsx" readonly="1" filename="nombre_archivo"/>    

                <field name="file_name" invisible="1"/>
                <field name="file_pdf" readonly="1" filename="file_name"/>

            </group>
            <notebook>
              <page string="Detalle" name="detalle">
                  <field name="libro_line">
                    <list options="{'no_create': True}" string="Libro Mayor Detalle">
                      <field name="code"/>
                      <field name="account"/>
                      <field name="date"/>
                      <!--field name="poliza"/-->
                      <field name="documento"/>
                      <field name="concepto"/>
                      <field name="debit"/>
                      <field name="credit"/>
                      <field name="acumulado_mes_cuenta"/>
                      <field name="subtotal_acumulado_mes"/>
                      <field name="saldo_mes_anterior"/>
                      <field name="acumulado_anio_cuenta"/>
                      <field name="subtotal_acumulado_anio"/>
                      <field name="total_acumulado_mes"/>
                      <field name="total_acumulado_anio"/>
                    </list>
                  </field>
              </page>
            </notebook>

    <group name="studio_group_543_1ia20g0sbbb">
      <group name="studio_group_543_left"/>
      <group name="studio_group_543_right">
        <field name="total_debit"/>
        <field name="total_credit"/>
      </group>
    </group>

          </sheet>
                                              <chatter open_attachments="True"/>

        </form>
      </field>
    </record>

    <!-- libro.mayor tree view -->
    <record id="libro_mayor_view_tree" model="ir.ui.view">
      <field name="name">libro_mayor_view_tree</field>
      <field name="model">libro.mayor</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="fecha_inicio"/>
          <field name="fecha_final"/>
        </list>
      </field>
    </record>

    <!-- libro.mayor action window -->
    <record id="libro_mayor_name_action" model="ir.actions.act_window">
      <field name="name">Libro Mayor</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">libro.mayor</field>
      <field name="view_mode">list,form</field>
    </record>

    <menuitem
    id="libro_mayor_menu"
    name="Libro Mayor"
    parent="account.menu_finance_reports"
    sequence="13"
    action="libro_mayor_name_action"/>

  </data>
</odoo>