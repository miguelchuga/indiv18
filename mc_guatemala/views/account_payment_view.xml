<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <record model="ir.ui.view" id="view_account_payment_form_gt">
      <field name="name">view_account_payment_form_gt</field>
      <field name="model">account.payment</field>
      <field name="inherit_id" ref="account.view_account_payment_form" />
      <field name="arch" type="xml">

  <xpath expr="//field[@name='memo']" position="after">
    <field name="x_cuentas_pagos_id"/>
    <field name="x_account_id"/>
    <field name="x_fecha_pago" invisible="True"/>
    <field name="x_no_negociable" invisible="payment_type != &quot;outbound&quot;"/>
    <field name="x_recibo_caja" invisible="payment_type == &quot;outbound&quot;"/>
    <field name="x_deposito" invisible="payment_type == &quot;outbound&quot;"/>
    <field name="x_cheque_manual" invisible="payment_type == &quot;outbound&quot;"/>
    <field name="numeros_a_letras" invisible="True"/>
    <field name="numeros_a_letras_dolar"  invisible="True"/>
  
  
  </xpath>
 

      </field>
      </record>
    </data>
  </openerp>
