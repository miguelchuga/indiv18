<odoo>
    <data>

        <record id="view_account_payment_form_inherit_internal" model="ir.ui.view">
            <field name="name">view.account.payment.form.inherit.internal</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">

                <field name="payment_type" position="before">
                    <label for="is_internal_transfer"/>
                    <div>
                        <field name="is_internal_transfer" readonly="state != 'draft'"/>
                        <span invisible="paired_internal_transfer_payment_id or not is_internal_transfer or state != 'draft'"
                              class="fst-italic">
                            Se crearÃ¡ un segundo pago en el diario de destino.
                        </span>
                    </div>
                </field>

                <xpath expr="//field[@name='partner_id'][1]" position="attributes">
                    <attribute name="invisible">partner_type != 'customer' or is_internal_transfer</attribute>
                </xpath>

                <xpath expr="//field[@name='partner_id'][2]" position="attributes">
                    <attribute name="invisible">partner_type != 'supplier' or is_internal_transfer</attribute>
                </xpath>

                <xpath expr="//field[@name='partner_bank_id'][1]" position="attributes">
                    <attribute name="invisible">not show_partner_bank_account or partner_type != 'customer' or is_internal_transfer or payment_type == 'inbound'</attribute>
                    <attribute name="required">require_partner_bank_account and not is_internal_transfer</attribute>
                </xpath>

                <xpath expr="//field[@name='partner_bank_id'][2]" position="attributes">
                    <attribute name="invisible">not show_partner_bank_account or partner_type != 'supplier' or is_internal_transfer or payment_type == 'inbound'</attribute>
                    <attribute name="required">require_partner_bank_account and not is_internal_transfer</attribute>
                </xpath>

                <xpath expr="//field[@name='partner_bank_id'][3]" position="attributes">
                    <attribute name="invisible">not show_partner_bank_account or is_internal_transfer or payment_type == 'outbound'</attribute>
                    <attribute name="required">require_partner_bank_account and not is_internal_transfer</attribute>
                </xpath>

                <xpath expr="//field[@name='partner_bank_id'][3]" position="after">
                    <field name="destination_journal_id"
                           placeholder="e.g. Cash"
                           context="{'default_partner_id': partner_id}"
                           invisible="not is_internal_transfer"
                           readonly="state != 'draft'"
                           required="is_internal_transfer and state == 'draft'"/>
                </xpath>
            </field>
        </record>

        <!-- This view is used to add the internal transfer filter in the search view -->
        <record id="view_account_payment_search_inherit" model="ir.ui.view">
            <field name="name">view.account.payment.search.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="is_internal_transfer"/>
                </xpath>
                <xpath expr="//filter[@name='outbound_filter']" position="after">
                    <filter string="Internal Transfers" name="transfers_filter"
                            domain="[('is_internal_transfer', '=', True)]"/>
                </xpath>
                <xpath expr="//filter[@name='inbound_filter']" position="attributes">
                    <attribute name="domain">[('partner_type', '=', 'customer'), ('is_internal_transfer', '=', False)]
                    </attribute>
                </xpath>
                <xpath expr="//filter[@name='outbound_filter']" position="attributes">
                    <attribute name="domain">[('partner_type', '=', 'supplier'), ('is_internal_transfer', '=', False)]
                    </attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
